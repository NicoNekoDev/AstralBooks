<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <activeProfiles>
        <activeProfile>repsy</activeProfile>
    </activeProfiles>

    <profiles>
        <profile>
            <id>repsy</id>
            <repositories>
                <repository>
                    <id>repsy-release</id>
                    <url>https://repo.repsy.io/mvn/niconeko/release</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>repsy-snapshots</id>
                    <url>https://repo.repsy.io/mvn/niconeko/snapshots</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <servers>
        <server>
            <id>repsy-release</id>
            <username>niconeko</username>
            <password>${env.REPSY_PASS}</password>
        </server>
        <server>
            <id>repsy-snapshots</id>
            <username>niconeko</username>
            <password>${env.REPSY_PASS}</password>
        </server>
    </servers>
</settings>